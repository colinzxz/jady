{
  "name": "@jady/monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@6.32.3",
  "keywords": [
    "jady"
  ],
  "license": "MIT",
  "author": "linco <zzomilk@gmail.com>",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colinzxz/jady.git"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm -y",
    "bootstrap": "pnpm i && sucrase-node scripts/bootstrap",
    "lint": "jady-cli lint",
    "changelog": "jady-cli changelog",
    "release": "jady-cli release",
    "publish": "sucrase-node scripts/publish && jady-cli release -p",
    "typecheck": "tsc --noEmit"
  },
  "bugs": {
    "url": "https://github.com/colinzxz/jady/issues"
  },
  "homepage": "https://github.com/colinzxz/jady#readme",
  "devDependencies": {
    "@jady/cli": "workspace:*",
    "@jady/eslint-config": "workspace:*",
    "eslint": "^8.12.0",
    "execa": "^5.0.0",
    "lint-staged": "^12.3.7",
    "ora": "^5.0.0",
    "simple-git": "^3.5.0",
    "simple-git-hooks": "^2.7.0",
    "sucrase": "^3.20.3",
    "tsup": "^5.12.1",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "{packages,scripts}/**/*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx --no-install lint-staged"
  }
}
